# YieldGuard Lite Backend Environment Variables

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/yieldguard_lite

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# Development Settings
DEBUG=true
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# External APIs
ETHERSCAN_API_KEY=your_etherscan_api_key_here
DEFILLAMA_API_BASE=https://yields.llama.fi
COINGECKO_API_BASE=https://api.coingecko.com/api/v3

# Get your OpenAI API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# WalletConnect Project ID (get this from https://cloud.walletconnect.com/)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=
